{
  "compilerOptions": {
    // Environment Settings
    "module": "ES6",                      // Browser friendly
    "target": "ES6",                      // Modern JS output
    "types": [],                           // Tidak perlu node types untuk frontend
    "lib": ["ES6", "DOM"],                // Support DOM API

    // Output
    "outDir": "dist",                      // Semua .js hasil compile masuk dist
    "sourceMap": true,                     // Debugging di browser
    "declaration": true,                   // Generate .d.ts (opsional)
    "declarationMap": true,                // Map untuk .d.ts (opsional)

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options (tetap optional)
    "strict": true,

    // Non-React frontend options
    "jsx": "preserve",                     // Hanya jika pakai React, bisa diabaikan
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "noUncheckedSideEffectImports": false,
    "moduleDetection": "auto",
    "skipLibCheck": true
  },
  "include": ["scripts/**/*.ts"]
}
